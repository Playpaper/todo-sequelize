<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title text-center">Login</h5>
      </div>
      <div class="card-body">
        {{> message}}
        {{!-- {{> message}} --}}
        <form action="/users/login" method="POST" novalidate>
          <div class="input-group mb-3">
            <span class="input-group-text">@</span>
            <input name="email" type="email" class="form-control" placeholder="Enter your email" required>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">#</span>
            <input name="password" type="password" class="form-control" placeholder="Enter your password" required>
          </div>
          <button type="submit" class="btn btn-secondary me-2">Login</button>
          {{!-- <a href="/auth/facebook" class="btn btn-primary me-1">Facebook Login</a> --}}
          <span>No Account ? <a href="/users/register" class="text-decoration-none">Register</a></span>
        </form>
      </div>
    </div>
  </div>
</div>